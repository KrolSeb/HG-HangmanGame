<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wisielec.wisielec.com">

    <uses-permission android:name="android.permission.INTERNET" />
    <application

        android:allowBackup="true"
        android:icon="@mipmap/logo_android"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_android"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.AfterLoginActivity"
            android:label="@string/title_activity_after_login"
            android:theme="@style/AppTheme" />

        <activity android:name=".activity.SignInActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>

        <activity android:name=".activity.SignUpActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>

        <activity android:name=".activity.EditAccountActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>

        <activity android:name=".activity.HowToPlayActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>

        <activity android:name=".activity.ChooseCountOfRoundsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>

        <activity android:name=".activity.ChooseCategoriesActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>

        <activity android:name=".activity.PlayGameActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>

        <activity android:name=".activity.SummaryActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>

    </application>
</manifest>