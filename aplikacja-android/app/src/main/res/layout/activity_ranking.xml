<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="wisielec.wisielec.com.activity.RankingActivity"
    android:background="@mipmap/ranking">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/firstUserNameRankPositionTextView"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Użytkownik"
            android:textColor="#0d2c4b"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/firstUserPointsRankPositonTextView"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/firstUserNameRankPositionTextView"
            android:gravity="right"
            android:text="1000"
            android:textColor="#0d2c4b"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/firstPointsTextView"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/firstUserPointsRankPositonTextView"
            android:layout_marginStart="189dp"
            android:gravity="left"
            android:text="pkt"
            android:textColor="#0d2c4b"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="212dp">

        <TextView
            android:id="@+id/secondUserNameRankPositionTextView"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="Użytkownik"
            android:textColor="#0d2c4b"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/secondUserPointsRankPositionTextView"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"

            android:gravity="right"
            android:text="500"
            android:textColor="#0d2c4b"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/secondPointsTextView"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:gravity="left"
            android:text="pkt"
            android:textColor="#0d2c4b"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="212dp">

        <TextView
            android:id="@+id/thirdUserNameRankPositionTextView"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Użytkownik"
            android:textColor="#0d2c4b"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thirdUserPointsRankPositionTextView"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:gravity="right"
            android:text="200"
            android:textColor="#0d2c4b"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thirdPointsTextView"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="left"
            android:text="pkt"
            android:textColor="#0d2c4b"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ListView
        android:id="@+id/infinityUserRankingList"
        android:layout_width="327dp"
        android:layout_height="218dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        tools:listitem="@layout/ranking_single_item" />

</RelativeLayout>