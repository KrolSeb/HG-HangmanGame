<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="wisielec.wisielec.com.activity.RankingActivity"
    android:background="@mipmap/ranking">

    <TextView
        android:id="@+id/firstUserNameRankPositionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="159dp"
        android:text="Użytkownik"
        android:textColor="#0d2c4b"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/firstUserPointsRankPositonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/firstUserNameRankPositionTextView"
        android:layout_below="@+id/firstUserNameRankPositionTextView"
        android:layout_marginStart="11dp"
        android:text="1000"
        android:textColor="#0d2c4b"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/firstPointsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstUserNameRankPositionTextView"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/firstUserPointsRankPositonTextView"
        android:text="pkt"
        android:textColor="#0d2c4b"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secondUserNameRankPositionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstUserPointsRankPositonTextView"
        android:layout_marginEnd="43dp"
        android:layout_marginTop="11dp"
        android:layout_toStartOf="@+id/firstPointsTextView"
        android:text="Użytkownik"
        android:textColor="#0d2c4b"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secondUserPointsRankPositionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/secondUserNameRankPositionTextView"
        android:layout_below="@+id/secondUserNameRankPositionTextView"
        android:layout_marginStart="15dp"
        android:text="500"
        android:textColor="#0d2c4b"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secondPointsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/secondUserPointsRankPositionTextView"
        android:layout_alignBottom="@+id/secondUserPointsRankPositionTextView"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/secondUserPointsRankPositionTextView"
        android:textColor="#0d2c4b"
        android:textSize="18dp"
        android:text="pkt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thirdUserNameRankPositionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/secondUserNameRankPositionTextView"
        android:layout_alignBottom="@+id/secondUserNameRankPositionTextView"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/firstPointsTextView"
        android:text="Użytkownik"
        android:textColor="#0d2c4b"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thirdUserPointsRankPositionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thirdUserNameRankPositionTextView"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/firstUserNameRankPositionTextView"
        android:text="250"
        android:textColor="#0d2c4b"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thirdPointsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thirdUserNameRankPositionTextView"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/thirdUserPointsRankPositionTextView"
        android:text="pkt"
        android:textColor="#0d2c4b"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/secondUserPointsRankPositionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

</RelativeLayout>