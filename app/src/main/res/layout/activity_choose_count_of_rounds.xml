<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/selectrounds">

    <Button
        android:id="@+id/threeRoundsButton"
        android:layout_width="156dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="159dp"
        android:background="#0d2c4b"
        android:text="3 rundy"
        android:textAppearance="@android:style/TextAppearance.Small.Inverse"
        android:textColor="#f4d170"
        android:textSize="27sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fiveRoundsButton"
        android:layout_width="156dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/threeRoundsButton"
        android:layout_below="@+id/threeRoundsButton"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#0d2c4b"
        android:text="5 rund"
        android:textAppearance="@android:style/TextAppearance.Small.Inverse"
        android:textColor="#f4d170"
        android:textSize="27sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sevenRoundsButton"
        android:layout_width="156dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/fiveRoundsButton"
        android:layout_below="@+id/fiveRoundsButton"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#0d2c4b"
        android:text="7 rund"
        android:textAppearance="@android:style/TextAppearance.Small.Inverse"
        android:textColor="#f4d170"
        android:textSize="27sp"
        android:textStyle="bold" />

</RelativeLayout>